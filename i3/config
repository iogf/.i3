# Avoid troubles with touchpad. it deactives touchpad when typing(Useful for laptops).
# exec syndaemon -d -i 1.0 -t

exec mnem-daemon

bindsym $mod+Shift+m move scratchpad; scratchpad show
bindsym $mod+m scratchpad show
focus_follows_mouse  no

# Define layout as being tabbed initially.

workspace_layout tabbed

mode "moveit" {
    bindsym h move left
    bindsym j move down
    bindsym k move up
    bindsym l move right

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# move floating windows with keys
bindsym $mod+Shift+n mode "moveit", focus floating;

bindsym $mod+F4 exec "setxkbmap -layout ru"
bindsym $mod+F3 exec "setxkbmap -layout br"

